\newcommand{\twopartdefmbox}[5]
{
    \left\{
        \begin{array}{ll}
            #2 & \mbox{#1 } #3 \\
            #4 & \mbox{#1 } #5
        \end{array}
    \right.
}

\newcommand{\twopartdef}[4]
{
